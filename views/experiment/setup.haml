%h2#title Experiment Setup

%form#settings{ action: '/experiment/form_test', method: 'post' }
  #left_settings
    %span#name_field
      %label What is your name?
      %input.small_text{ type: 'text', name: 'name' }
    %span#experiment_title
      %label What is the title of your experiment?
      %input.small_text{ type: 'text', name: 'title' }
    %span#experiment_description
      %label Please provide a brief description of the experiment
      %input.large_text{ type: 'text', name: 'description' }
  #right_settings
    %span#cells_check
      %label Are the cells positioned and visible under the microscope?
      %input.radio{ type: 'radio', name: 'cells', value: true } Yes
      %input.radio{ type: 'radio', name: 'cells', value: false, checked: true } No
    %span#dropper_check
      %label Is the drug administration dropper placed correctly?
      %input.radio{ type: 'radio', name: 'dropper', value: true } Yes
      %input.radio{ type: 'radio', name: 'dropper', value: false, checked: true } No
    %span#experiment_expectations
      %label What do you expect to see happen in this experiment?
      %input.large_text{ type: 'text', name: 'expectations' }
  #submit_settings
    %input.button{ type: 'submit', value: "Save", disabled: true }

